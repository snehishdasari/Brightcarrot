<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".BankDetails2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/roundbuttonblue"
        android:layout_margin="15dp"
        android:layout_weight="1.05">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:id="@+id/bankclose"
            android:layout_margin="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Bank Details"
        android:textSize="25sp"
        android:textStyle="bold"

        android:textColor="#000000"

        android:fontFamily="@font/acme"
        android:gravity="center"/>
    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:id="@+id/accno"
        android:textColorHint="#000000"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="19sp"
            android:hint="Account Number"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:textColor="#000000"
            android:fontFamily="@font/acme"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:id="@+id/ifsc"
        android:textColorHint="#000000"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="19sp"
            android:hint="IFSC Code"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_code_black_24dp"
            android:textColor="#000000"
            android:fontFamily="@font/acme"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:id="@+id/bankname"
        android:textColorHint="#000000"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="19sp"
            android:hint="Bank Name"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_account_balance_black_24dp"
            android:textColor="#000000"
            android:fontFamily="@font/acme"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:id="@+id/bankbranch"
        android:textColorHint="#000000"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="19sp"
            android:hint="Bank Branch"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/ic_location_city_black22_24dp"
            android:textColor="#000000"
            android:fontFamily="@font/acme"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/roundbutton"
            android:text="Save"
            android:id="@+id/banksave"
            android:textSize="20sp"
            android:fontFamily="@font/acme"
            android:layout_margin="10dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:id="@+id/bankedit"
            android:fontFamily="@font/acme"
            android:text="Edit"
            android:textStyle="italic"
            android:background="@drawable/roundbuttongreen"
            android:layout_margin="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>

