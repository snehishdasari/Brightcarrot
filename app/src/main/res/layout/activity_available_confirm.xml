<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".AvailableConfirmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/roundbuttonyellow"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:id="@+id/backavailableconfirm"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Details"
                android:fontFamily="@font/acme"
                android:id="@+id/availableconfirmheading"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/backavailableconfirm"
                android:background="@drawable/roundbuttonyellow"
                android:textColor="#000000"

                android:textSize="25sp"

                />

            

        </RelativeLayout>
        
        
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="#ffffff"
            android:layout_margin="15dp"
            android:id="@+id/priceconfirm"
            android:layout_height="60dp">


            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:drawableLeft="@drawable/indianrupe"
                android:drawablePadding="12dp"
                android:fontFamily="@font/acme"
                android:hint="Price of the Vehicle per day"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="15dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:drawablePadding="12dp"

            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:fontFamily="@font/acme"
            android:text="Start Time"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            >

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/spinnershour"
                android:background="@android:color/white"
                >

            </Spinner>

            <Spinner
                android:id="@+id/spinnersmin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >

            </Spinner>

        </LinearLayout>


    </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:fontFamily="@font/acme"
                android:text="Start Date"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:id="@+id/spinnersdate"
                    android:background="@android:color/white"
                    >

                </Spinner>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:layout_weight="1"
                    android:id="@+id/spinnersmonth"
                    android:layout_margin="5dp"
                    >

                </Spinner>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/spinnersyear"
                    android:background="@android:color/white"
                    android:layout_margin="5dp"
                    >

                </Spinner>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="15dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:drawablePadding="12dp"

                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:fontFamily="@font/acme"
                android:text="End  time"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:id="@+id/spinnerehour"
                    android:background="@android:color/white"
                    >

                </Spinner>

                <Spinner
                    android:id="@+id/spinneremin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    >

                </Spinner>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:fontFamily="@font/acme"
                android:text="End Date"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:id="@+id/spinneredate"
                    android:background="@android:color/white"
                    >

                </Spinner>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:layout_weight="1"
                    android:id="@+id/spinneremonth"
                    android:layout_margin="5dp"
                    >

                </Spinner>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/spinnereyear"
                    android:background="@android:color/white"
                    android:layout_margin="5dp"
                    >

                </Spinner>
            </LinearLayout>


        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="#ffffff"
            android:layout_margin="15dp"
            android:id="@+id/addrconfirm"
            android:layout_height="60dp">


            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:drawablePadding="12dp"
                android:fontFamily="@font/acme"
                android:hint="Vehicle Pickup Address"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="#ffffff"
            android:layout_margin="15dp"
            android:id="@+id/phoneconfirm"
            android:layout_height="60dp">


            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="12dp"
                android:fontFamily="@font/acme"
                android:hint="Contact Details(Mobile number)"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm!"
            android:background="@drawable/roundbutton"
            android:layout_marginLeft="60dp"
            android:textColor="#ffffff"
            android:layout_marginRight="60dp"
            android:id="@+id/confirm"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:fontFamily="@font/acme"/>
        
        
        
        
        

    </LinearLayout>






</ScrollView>